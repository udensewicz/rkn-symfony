{% extends 'base.html.twig' %}

{% block title %}Członkowie Koła :: Rada Kół Naukowych PW{% endblock %}

{% block body %}
    <div class="container">
        <div class="btn-group d-flex" role="group" aria-label="...">
            <a role="button" class="btn btn-outline-primary w-100" href="/kn/{{ kn.id }}/members">
                <i class="fa fa-users fa-2x" style=" vertical-align: middle;"></i>
                <span class="ml-2"><b>Członkowie</b></span>
            </a>
            <a role="button" class="btn btn-outline-primary w-100" href="/kn/{{ kn.id }}/meetings/all">
                <i class="fa fa-calendar-alt fa-2x" style=" vertical-align: middle;"></i>
                <span class="ml-2"><b>Zebrania</b></span>
            </a>
        </div>
        <br/>
        <h4>Lista aktualnych członków {{ kn.nameD }}</h4>
        {% if members %}
            <br>
            <table id="idatatable" datatable="" width="100%" class="display table table-hover table-bordered">
                <thead>
                <tr class="bg-primary">
                    <th>Lp.</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Rola</th>
                </tr>
                </thead>
                <tbody>
                {% for member in members %}
                    <tr scope="row">
                        <td>{{ loop.index }}</td>
                        <td>{{ member.name }}</td>
                        <td>{{ member.surname }}</td>
                        <td>{{ member.role_type == 'W' ? 'Członek' : 'Stowarzyszony' }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Brak członków</p>
        {% endif %}
    </div>
{% endblock %}
